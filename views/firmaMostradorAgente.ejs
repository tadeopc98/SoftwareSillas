                                    <input type="text" class="form-control" id="qr" name="qr" value="<%= service.qrAsignado  %>"  readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="timeInputStart" class="control-label mb-1">Hora de Inicio</label>
                                    <input type="text" class="form-control" id="timeInputStart" name="timeInputStart" value="<%= service.horaInicio  %>"  readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="timeInputClose" class="control-label mb-1">Hora Termino</label>
                                    <input type="text" class="form-control" id="timeInputClose" name="timeInputClose" value="<%= service.horaFin  %>" readonly>
                                </div>
                                
                                
                                <div class="col-md-4">
                                    <label for="usuarioInicio" class="control-label mb-1">Usuario que inicia</label>
                                    <input type="text" class="form-control" id="usuarioInicio" name="usuarioInicio" value="<%= service.usuarioInicio  %>" readonly>
                                </div>
                                <div class="col-md-4">
                                    <label for="usuarioModifica" class="control-label mb-1">Usuario que Modifica</label>
                                    <input type="text" class="form-control" id="usuarioModifica" name="usuarioModifica" value="<%= service.usuarioModifico  %>" readonly>
                                </div>
                                <div class="col-md-4">
                                    <label for="usuarioCierra" class="control-label mb-1">Usuario que Cierra</label>
                                    <input type="text" class="form-control" id="usuarioCierra" name="usuarioCierra" value="<%= service.usuarioCerro %>" readonly>
                                </div>
                                
                                
                                
                                <div class="col-md-3">
                                    <label for="operador" class="control-label mb-1">Operador</label>
                                    <input type="text" class="form-control" id="operador" name="operador" value="<%= service.noColaborador  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="noSilla" class="control-label mb-1">Número de Silla</label>
                                    <input type="text" class="form-control" id="noSilla" name="noSilla" value="<%= service.noSilla  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="aerolinea" class="control-label mb-1">Aerolinea</label>
                                    <input type="text" class="form-control" id="aerolinea" name="aerolinea"  value="<%= service.aerolinea  %>" readonly>
                                </div>
                                <div class="col-md-5">
                                    <label for="observaciones" class="control-label mb-1">Observaciones Internas</label>
                                    <input type="text" class="form-control" id="observaciones" name="observaciones" value="<%= service.observaciones  %>" readonly>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <!-- Datos de Dirección -->
                    <div class="card">
                        <h5 class="card-header text title-2" style="background-color:cornflowerblue">Datos de papeleta / Cliente</h3>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label for="nombrePax" class="control-label mb-1">Nombre Pax.</label>
                                    <input type="text" class="form-control" id="nombrePax" name="nombrePax" value="<%= service.nombrePax  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="noVuelo" class="control-label mb-1">Número de Vuelo</label>
                                    <input type="text" class="form-control" id="noVuelo" name="noVuelo" value="<%= service.vuelo  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="noAsiento" class="control-label mb-1">Número de asiento</label>
                                    <input type="text" class="form-control" id="noAsiento" name="noAsiento" value="<%= service.ASIENTO  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="puerta" class="control-label mb-1">Puerta</label>
                                    <input type="text" class="form-control" id="puerta" name="puerta" value="<%= service.puerta  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="eta" class="control-label mb-1">ETA</label>
                                    <input type="text" class="form-control" id="eta" name="eta" value="<%= service.ETA  %>" readonly>
                                </div>
                                <% if (service.tipoSilla === null ) { %>
                                    <div class="col-md-3">
                                        <label for="tipoSilla" class=" form-control-label">Tipo de Silla</label>
                                        <select name="tipoSilla" id="tipoSilla" class="form-control" value="<%= service.tipoSilla  %>">
                                                <option>WCHR</option>   
                                                <option>WCHC</option>
                                                <option>UH</option>
                                                
                                        </select>
                                    </div>
                                <% } else  { %>
                                    <div class="col-md-3">
                                        <label for="tipoSilla" class="control-label mb-1">Tipo Silla</label>
                                        <input type="text" class="form-control" id="tipoSilla" name="tipoSilla" value="<%= service.tipoSilla  %>" readonly>
                                    </div>
                                <% } %>
                                
                                <% if (service.servicioSolicitado === null ) { %>
                                    <div class="col-md-3">
                                        <label for="ServicioSolicitado" class=" form-control-label">Servicio Solicitado</label>
                                        <select name="ServicioSolicitado" id="ServicioSolicitado" class="form-control">
                                                <option>P. ATENCION</option>   
                                                <option>MOSTRADOR</option>
                                                <option>SALA</option>
                                        </select>
                                    </div>
                                <% } else  { %>
                                    <div class="col-md-3">
                                        <label for="ServicioSolicitado" class="control-label mb-1">Servicio Solicitado</label>
                                        <input type="text" class="form-control" id="ServicioSolicitado" name="ServicioSolicitado" value="<%= service.servicioSolicitado  %>" readonly>
                                    </div>
                                <% } %>
                                
                                <% if (service.tipoVuelo === null ) { %>
                                    <div class="col-md-3">
                                        <label for="tipoVuelo" class=" form-control-label">Tipo de Vuelo</label>
                                        <select name="tipoVuelo" id="tipoVuelo" class="form-control">
                                                <option>CONTACTO</option>   
                                                <option>REMOTA</option>
                                                <option>ABORDAJE</option>
                                                <option>RECIBO</option>   
                                                
                                        </select>
                                    </div>
                                <% } else  { %>
                                    <div class="col-md-3">
                                        <label for="tipoVuelo" class="control-label mb-1">Tipo de Vuelo</label>
                                        <input type="text" class="form-control" id="tipoVuelo" name="tipoVuelo" value="<%= service.tipoVuelo  %>" readonly>
                                    </div>
                                <% } %>
                                
                                <% if (service.origenReserva === null ) { %>
                                    <div class="col-md-3">
                                        <label for="origen" class=" form-control-label">ORIGEN</label>
                                        <select name="origen" id="origen" class="form-control">
                                                <option>RESERVACIÓN</option>   
                                                <option>AEROPUERTO</option>
                                        </select>
                                    </div>
                                <% } else  { %>
                                    <div class="col-md-3">
                                        <label for="origen" class="control-label mb-1">Tipo de Vuelo</label>
                                        <input type="text" class="form-control" id="origen" name="origen" value="<%= service.origenReserva  %>" readonly>
                                    </div>
                                <% } %>
                                <div class="col-md-2">
                                    <label for="origenVuelo" class="control-label mb-1">Origen</label>
                                    <input type="text" class="form-control" id="origenVuelo" name="origenVuelo" value="<%= service.origen  %>" readonly>
                                </div>
                                <div class="col-md-2">
                                    <label for="destinoVuelo" class="control-label mb-1">Destino</label>
                                    <input type="text" class="form-control" id="destinoVuelo" name="destinoVuelo" value="<%= service.destino  %>" readonly>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    
                    <div class="card">
                        <h5 class="card-header text title-2" style="background-color:cornflowerblue">Datos del Agente de Aerolinea</h3>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="nombreAgente" class="control-label mb-1">Nombre del agente de Aerolinea</label>
                                    <input type="text" class="form-control" id="nombreAgente" name="nombreAgente"  value="<%= datos.nombreColaborador %> <%= datos.apellidoColaborador %>" readonly>
                                </div>
                                
                                <div class="col-md-12">
                                    <label>Dibuje su Firma:</label>
                                    <div class="signature-container">
                                        <div class="canvas-container">
                                            <canvas id="signatureCanvas" width="400" height="200"></canvas>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" id="limpiarCanvas" class="btn btn-outline-success btn-lg mx-2">Limpiar</button>
                                </div>
                                
                            </div>
                        </div>
                    </div>

                    
                    
                    <!-- Botón de Enviar -->
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" class="btn btn-outline-success btn-lg mx-2" >Firmar Servicio</button>
                        <a href="/agenteAerolinea" class="btn btn-outline-danger btn-lg mx-2" >Atras</a>
                        
                    </div>
                </form>
                
            </div>
            <% } %>
        </div>

    </div>
    
    
    

    <script>
        var canvas = document.getElementById('signatureCanvas');
        var signaturePad = new SignaturePad(canvas);

        

        document.querySelector('form').addEventListener('submit', function (e) {
            e.preventDefault();
            var signatureData = signaturePad.toDataURL();

            var hiddenInput = document.createElement('input');
            hiddenInput.setAttribute('type', 'hidden');
            hiddenInput.setAttribute('name', 'firma');
            hiddenInput.setAttribute('value', signatureData);
            this.appendChild(hiddenInput);

            this.submit();
        });

        var canvas = document.getElementById('signatureCanvas');
  var signaturePad = new SignaturePad(canvas);

  // Agrega un controlador de eventos para limpiar el lienzo cuando se hace clic en el botón "Limpiar"
  document.getElementById('limpiarCanvas').addEventListener('click', function () {
      signaturePad.clear();
  });
    </script> 

    

