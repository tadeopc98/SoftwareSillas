            <% if (service) { %>
            <div class="container mt-5">
                <form action="/firmaMostrador" method="POST">
                    <!-- Datos Personales -->
                    <div class="card">
                        <h5 class="card-header text title-2" style="background-color:cornflowerblue">Datos Internos</h3>
                        <div class="card-body">
                            <div class="row mb-3">
